{
	"env": {
		"browser": true,
		"es2021": true,
		"jquery": true
	},
	"extends": "eslint:recommended",
	"parserOptions": { "ecmaVersion": 12, "sourceType": "module" },
	"rules": {
		"arrow-parens": ["error", "as-needed"],
		"comma-dangle": ["error", "never"],
		"no-tabs": "off",
		"object-curly-spacing": ["error", "always"],
		"quote-props": ["error", "as-needed"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
