- // Check if post has thumbnail, else grab default post image
- if ( has_post_thumbnail() ) :
    - $thumbnail = wp_get_attachment_image_src( get_post_thumbnail_id(), 'full' )[0]
- else :
    - $thumbnail = get_theme_file_uri() . "/images/post.png"
- endif

a.post(href="<?php echo get_permalink() ?>" style="background-image: url(<?php echo $thumbnail ?>)")
    .overlay
    .post-content
        h3: - the_title()