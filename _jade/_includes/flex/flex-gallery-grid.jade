- $header = get_sub_field('header')
- $content = get_sub_field('content')
- $gallery = get_sub_field('gallery')

section.flex-block.flex-gallery-grid.hrz-padding
	.container.content-block
		- if($header) :
			h2: - echo $header
		- endif

		- if($content) : 
			- echo $content
		- endif

		- if (have_rows('gallery')) :
			.swiper.gallery-grid
				.swiper-wrapper
					- while (have_rows('gallery')) : the_row()
						.swiper-slide(style="background-image:('<?= get_sub_field('image')['url']?>'); height: 400px;" aria-label="<?= get_sub_field('image')['alt']?>")
					- endwhile
				.swiper-button-prev
				.swiper-button-next
		- endif